{
    "name": "@genx/algorithm",
    "version": "2.0.0",
    "description": "Commonly used data structure & algorithms",
    "main": "lib/index",
    "module": "lib/index",
    "react-native": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs' -r --verbose ./src",
        "test:clean": "rm -rf coverage",
        "test": "npm run test:clean && mocha src/**/*.spec.js",
        "cover": "npm run test:clean && nyc --reporter=html --reporter=text -- mocha --reporter progress src/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint:fix": "eslint --fix \"src/**/*.js\"",
        "commitlint": "commitlint --edit \"$1\"",
        "clean": "del lib",
        "build:cjs": "swc src --config-file='./swc.build.json' --env-name='production' -d lib --source-maps --copy-files",
        "build": "npm run clean && npm run build:cjs",
        "release": "release-it",
        "prepare": "husky install"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "repository": "https://github.com/genx-tech/gx-algorithm.git",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-algorithm/issues"
    },
    "keywords": [
        "app",
        "worker"
    ],
    "nyc": {
        "exclude": [
            ".mocharc.js",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@genx/error": "*",
        "@genx/july": "*"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^11.0.0",
        "@genx/app": "^2.0.4",
        "@genx/data": "^2.1.1",
        "@genx/model": "^2.0.0",
        "@genx/sys": "^0.1.6",
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "^2.0.0",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.213",
        "@swc/register": "^0.1.10",
        "commitlint": "^11.0.0",
        "del-cli": "^4.0.1",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.6.7",
        "mocha": "^9.1.1",
        "mysql2": "^2.3.3",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "release-it": "^14.2.2",
        "shortid": "^2.2.16",
        "should": "^13.2.3"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended"
        ],
        "env": {
            "shared-node-browser": true,
            "commonjs": true,
            "es6": true,
            "es2022": true
        },
        "parserOptions": {
            "ecmaVersion": 13,
            "sourceType": "module"
        }
    },
    "eslintIgnore": [
        "/node_modules",
        "/lib",
        "/dist",
        "/test",
        "/patches",
        "/docs",
        "/**/__test__",
        "/**/__tests__",
        "babel.config.js",
        "rollup.config.js"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    }
}
